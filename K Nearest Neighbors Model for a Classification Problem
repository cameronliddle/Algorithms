        "# Task 4\n",
        "def optimize_knn_with_best_model(best_vectorizer, max_features, neighbors_list):\n",
        "    for n in neighbors_list:\n",
        "        print(f\"\\nRunning KNN with n_neighbors={n} and max_features={max_features}\")\n",
        "\n",
        "        pipeline = Pipeline([\n",
        "            ('text_vect', best_vectorizer(max_features=max_features)),\n",
        "            ('knn', KNeighborsClassifier(n_neighbors=n))\n",
        "        ])\n",
        "\n",
        "        pipeline.fit(X_train['text'], y_train)\n",
        "        val_predictions = pipeline.predict(X_val['text'])\n",
        "        accuracy = accuracy_score(y_val, val_predictions)\n",
        "        weighted_f1 = f1_score(y_val, val_predictions, average='weighted')\n",
        "\n",
        "        print(f\"Accuracy with n_neighbors={n}: {accuracy:.2f}\")\n",
        "        print(f\"Weighted F1-Score with n_neighbors={n}: {weighted_f1:.2f}\")\n",
        "\n",
        "best_vectorizer = TfidfVectorizer\n",
        "max_features = 1500  # my most best max feature is 1500 and 2000 so i chose 1500\n",
        "neighbors_list = [3, 5, 7, 10]\n",
        "\n",
        "optimize_knn_with_best_model(best_vectorizer, max_features, neighbors_list)\n"
      ],
