        "# Install the library and functions\n",
        "import nltk\n",
        "\n",
        "nltk.download('punkt')\n",
        "nltk.download('stopwords')"
      ],
      "metadata": {
        "id": "PDaIygu2Y5zg",
        "outputId": "4f5934d9-0f9b-4dfd-9554-60b4817bcd89",
        "colab": {
          "base_uri": "https://localhost:8080/"
