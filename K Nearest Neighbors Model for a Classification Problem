        "from sklearn.feature_extraction.text import TfidfVectorizer\n",
        "\n",
        "def run_tfidf_experiment():\n",
        "    print(\"\\nRunning experiment with TfidfVectorizer\")\n",
        "\n",
        "\n",
        "    pipeline = Pipeline([\n",
        "        ('text_vect', TfidfVectorizer(use_idf=True, max_features=500)),\n",
        "        ('knn', KNeighborsClassifier(n_neighbors=10))\n",
        "    ])\n",
        "\n",
        "\n",
        "    pipeline.fit(X_train['text'], y_train)\n",
        "    val_predictions = pipeline.predict(X_val['text'])\n",
        "    accuracy = accuracy_score(y_val, val_predictions)\n",
        "    weighted_f1 = f1_score(y_val, val_predictions, average='weighted')\n",
        "\n",
        "    print(f\"Accuracy with TfidfVectorizer: {accuracy:.2f}\")\n",
